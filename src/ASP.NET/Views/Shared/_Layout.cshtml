
<!DOCTYPE html>
<html>
<head>
    <title>The World -@ViewBag.Title</title>
    <meta charset="UTF-8" />
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <div id="sidebar">
        <img src="~/imgs/poza.jpg" alt="IMG" class="headshot" />
        <span id="username">Muresan Vladut</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Home">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div><button id="sidebarToggle">ToggleMenu</button></div>
        </div>


        <div>
            @RenderBody()
        </div>


        <div id="footer">
            &copy;2015 The World ltd.
        </div>
    </div>

    <script type="text/javascript" src="~/wwwroot/lib/jQuery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/site.js"></script>
@RenderSection("Scripts",false)
</body>
</html>
    